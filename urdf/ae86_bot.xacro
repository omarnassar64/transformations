<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="ae86_bot">

  <!-- ================= BASE LINK ================= -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.4 0.2"/> <!-- جسم الروبوت -->
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/> <!-- أحمر كامل -->
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

  <!-- ================= WHEELS ================= -->
  <xacro:macro name="wheel" params="name x y z">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder radius="0.15" length="0.08"/> <!-- عجلة كبيرة -->
        </geometry>
        <material name="black">
          <color rgba="0.0 0.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.15" length="0.08"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="2"/>
        <inertia ixx="0.02" iyy="0.02" izz="0.02"
                 ixy="0.0" ixz="0.0" iyz="0.0"/>
      </inertial>
    </link>

    <!-- Joint -->
    <joint name="${name}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${name}"/>
      <origin xyz="${x} ${y} ${z}" rpy="1.5708 0 0"/> <!-- اتجاه طبيعي -->
      <axis xyz="0 1 0"/> <!-- تدور حوالين Y -->
    </joint>
  </xacro:macro>

  <!-- الأربع عجلات -->
  <xacro:wheel name="wheel_front_left"  x="0.25"  y="0.25"  z="-0.1"/>
  <xacro:wheel name="wheel_front_right" x="0.25"  y="-0.25" z="-0.1"/>
  <xacro:wheel name="wheel_back_left"   x="-0.25" y="0.25"  z="-0.1"/>
  <xacro:wheel name="wheel_back_right"  x="-0.25" y="-0.25" z="-0.1"/>

  <!-- ================= LIDAR ================= -->
  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/> <!-- رمادي فاتح لتمييز الليدار -->
      </material>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/> <!-- فوق جسم الروبوت -->
  </joint>

</robot>

